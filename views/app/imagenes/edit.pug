extends ../../layout.pug
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        h1 Editar un anuncio
        form(action="/app/imagenes/"+ imagen._id+"?_method=PUT" method="POST")
            div(class="form-group")
                label(for="Titulo") Titulo
                input(type="text" name="title" placeholder="Coloca el titulo del anuncio" id="Titulo" class="form-control" value=imagen.title)
            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit" class="btn btn-info" value="Guardar")
